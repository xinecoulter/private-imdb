<h1>Add a new movie!</h1>

<form action="/movies/new" method="get">
  <label for="title">Search by movie title</label><br/>
  <input type="string" name="title">
  <button>Search</button>
</form>

<% unless @movies == nil %>
<ol>
  <% @movies.each do |movie| %>
    <li>
      <h3><%= movie.title %></h3>
        <ul>
          <li><%= image_tag movie.poster %></li>
          <li>Year: <%= movie.year %></li>
          <li>Plot: <%= truncate(movie.plot, length: 50) %></li>
          <li>MPAA Rating: <%= movie.mpaa_rating %></li>
          <li>Length: <%= pluralize(movie_length_hours(movie), 'hour') %> and <%= pluralize(movie_length_minutes(movie), 'minute') %></li>
        </ul>
      <%= button_to "Save this movie", add_new_movie_path(title: movie.title) %>
      <%= button_to "Favorite this movie", add_new_movie_path(title: movie.title, rating: 100) %>
    </li>
  <% end %>
</ol>
<% end %>
