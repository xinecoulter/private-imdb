<h1>Add a new movie!</h1>

<form action="/movies/new" method="get">
  <label for="title">Search by movie title</label><br/>
  <input type="string" name="title">
  <button>Search</button>
</form>

<% unless @movies == nil %>
<ol>
  <% @movies.each do |movie| %>
    <li>
      <h3><%= movie.title %></h3>
        <ul>
          <li>Year: <%= movie.year %></li>
          <li>Plot: <%= movie.plot %></li>
          <li>MPAA Rating: <%= movie.mpaa_rating %></li>
        </ul>
      <%= button_to "Favorite this movie", add_new_favorite_path(title: movie.title) %>
    </li>
  <% end %>
</ol>
<% end %>
